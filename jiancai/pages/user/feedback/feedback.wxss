/* pages/feedback/feedback.wxss */
.body{
  width: 100%;
  height: 1200rpx;
  background: rgb(244, 244, 244);
}
.top{
  width: 100%;
  height: 30rpx;
}
.picker{
  width: 100%;
  height: 100rpx;
  background: #fff;
  line-height: 100rpx;
}
.fb-type{
  width: 90%;
  margin: 0 auto;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
}
.type-label{
  color: #333;
  font-size: 28rpx;
}
.type-icon{
  width: 40rpx;
  height: 40rpx;
  margin-top: 30rpx;
}
.ment{
  width: 100%;
  height: 400rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.ment textarea{
  width: 90%;
  height: 320rpx;
  font-size: 28rpx;
}
.ment text{
  margin-left: 80%;
  font-size: 26rpx;
  color: #969696;
}
.top1{
  width: 90%;
  height: 60rpx;
  margin: 0 auto;
  color: #969696;
  font-size: 26rpx;
  line-height: 60rpx;
}
.phone{
  width: 100%;
  height: 100rpx;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.phone input{
  width: 90%;
  height: 60rpx;
  font-size: 26rpx;
}
.botter{
  width: 100%;
  height: 100rpx;
  background: #ab2b2b;
  position: fixed;
  left: 0;
  bottom: 0;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
}