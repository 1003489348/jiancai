/* pages/addressList/addressList.wxss */
page{  
  display: flex;  
  flex-direction: column;  
  height: 100%;  
}
.list{
  width: 100%;
  display: flex;
}  
.list_item{
  width: 15%;
  height: 60rpx;
  color: #fff;
  border-radius: 10rpx;
  margin-top: 80rpx;
  margin-left: 20rpx;
  font-size: 28rpx;
  /* text-align: center; */
  background: #ab2b2b;
  display: flex;
  justify-content: center;
  align-items: center;
}
.product-name-wrap{
  width: 75%;
  margin: 0px 10px;
  font-size: 14px;
  color: #404040;
}
.ui-list-item-info{
  margin: 5px 0px;
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
  flex-direction: row;
}
.ui-list-item-info text:nth-child(1){
  font-size: 40rpx;
  color: #000;
  font-weight: 0;
}
.ui-list-item-info text:nth-child(2){
  font-size: 28rpx;
  color: #333;
}
.ui-list-item-address{
  color: #585c64;
}
.ui-list-item-time{
  margin: 5px 0px;
  color: #ab2b2b;
}
