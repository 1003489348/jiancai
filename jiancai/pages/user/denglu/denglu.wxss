/* pages/user/denglu/denglu.wxss */
.top{
  width: 100%;
  height: 100rpx;
  text-align: center;
  font-size: 50rpx;
  margin-top: 100rpx;
  color: #ab2b2b;
}
.from{
  width: 70%;
  height: 300rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  margin: 0 auto;
}
.from input{
  width: 100%;
  height: 80rpx;
  border-radius: 10rpx;
  margin: 40rpx 0;
  border: 1px solid #ccc;
  background: #eee;
}
.item{
  width: 70%;
  margin: 0 auto;
  font-size: 28rpx;
  color: #ab2b2b;
  margin-top: -20rpx;
}
.item text:nth-child(1){
  float: left;
}
.item text:nth-child(2){
  float: right;
}
.butt{
  width: 70%;
  margin: 0 auto;
  display: flex;
}
.butt button{
  width: 100%;
  background: #ab2b2b;
  color: #fff;
  margin-top: 20rpx;
}