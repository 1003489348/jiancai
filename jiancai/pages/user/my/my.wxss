/* pages/my/my.wxss */
.body{
  background: rgb(244, 244, 244);
  width: 100%;
  height: 1200rpx;
}

.nav{
  width: 100%;
  height: 280rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgb(51, 51, 51);
}

.nav button{
  width: 300rpx;
  height: 100rpx;
  background: #969696;
  color: #fff;
  line-height: 100rpx;
}

.nav_t{
  width: 89%;
  height: 280rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.nav_img{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.nav_item{
  display: flex;
  flex-direction: column;
  margin-left: -240rpx;
}

.nav_item text:nth-child(1){
  color: #fff;
  font-size: 50rpx;
}

.nav_item text:nth-child(2){
  color: #969696;
}

.nav_img1{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.ment{
  width: 100%;
  height: 185rpx;
  border-bottom: 1px solid #ccc;
  display: flex;
  flex-direction: row;
  background: #fff;
}

.ment_t{
  border-left: 1px solid #ccc;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.ment_t image{
  width: 60rpx;
  height: 60rpx;
}

.ment_t text{
  font-size: 24rpx;
  color: rgb(27, 27, 27);
  margin-top: 20rpx;
}

.dialog-login{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5); 
  display: flex;
  justify-content: center;
  align-items: center;
}


.dialog-login .dialog-body{
  width: 540rpx;
  height: auto;
  overflow: hidden;
  background: #fff;
  border-radius: 5px;
  padding: 40rpx;
}

.dialog-login .dialog-body .title{
  width: 100%;
  text-align: center;
  line-height: 60rpx;
}

.dialog-login .dialog-body .content{
  width: 100%;
}

.dialog-login .dialog-body button{
  margin-top: 30rpx;
}